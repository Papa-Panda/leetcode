class Solution(object):
    def threeSumClosest(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: int
        """
        nums.sort()
        if len(nums) < 3: return None
        res = sum(nums[:3])
        for i in range(len(nums) -2):
            left = i+1
            right = len(nums)-1
            while left < right:
                temp_sum = nums[right] + nums[left] + nums[i]
                diff = abs(temp_sum - target)
                if diff == 0:
                    return target
                elif diff < abs( res-target ):
                    res = temp_sum
                elif temp_sum < target:
                    left += 1
                else:
                    right -= 1
        return res
